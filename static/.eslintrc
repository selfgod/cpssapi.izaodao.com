{
  "extends": "airbnb-base/legacy",
  "env": {
    "browser": true,
  },
  "rules": {
    "comma-dangle": 0,
    "indent": [2, 4, { "SwitchCase": 1 }],
    "func-names": ["error", "never"],
    "no-console": ["error", { "allow": ["log"] }],
    "camelcase": 0,
    "no-underscore-dangle": 0,
    "no-unused-vars": 0,
    "one-var-declaration-per-line": 0,
    "no-unused-expressions": ["error", { "allowShortCircuit": true }],
    "vars-on-top": 0,
    "spaced-comment": 0,
    // 强制在parseInt()使用基数参数
    "radix": 1,
    "object-curly-spacing": 0,
    "eqeqeq": 0,
    "no-plusplus": 0,
    "no-mixed-operators": 0,
    "no-else-return": 0,
    "no-useless-escape": 0,
    "no-extend-native": 0,
    "max-len": 0,
    // 不允许对 function 的参数进行重新赋值
    "no-param-reassign": 0,
    "dot-notation": 0,
    "one-var": 0,
    "global-require": 0,
    "quote-props": ["error", "as-needed", { "keywords": true }],
    "no-cond-assign": 0,
    "no-alert": 0,
    "consistent-return": 0,
    "no-use-before-define": 0,
    "no-script-url": 0,
    "newline-per-chained-call": 0,
    "no-loop-func": 0
  },
  "globals": {
    "JP_DOMAIN": true,
    "MAIN_DOMAIN": true,
    "ZD_KNOW": true,
    "CPSS_DOMAIN": true
  }
}